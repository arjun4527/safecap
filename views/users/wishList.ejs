                <% if(wishListData.items.length===0){ %>
                     <div style="height:400px">
                        <div style="color:red; font-size:30px;justify-content:right; font-weight: bold ; display: block;right:200px ">oops!</div>
                        <div style="color:red; font-size:30px;justify-content:right;right:200px">Your Wishlist is empty</div>
                    </div>
               <% }else{ %>
                  <form action="#" method="post" class="cart style2">
                    <table style="width: 100%; max-width: 1400px; margin: 0 auto; border-collapse: collapse;">
                        <thead class="cart__row cart__header" style="color: black;">
                            <tr>
                                <th colspan="2" class="text-center">Product</th>
                                <th class="text-center">Price</th>
                                <th class="text-center">Add to cart</th>
                                <th class="text-center">Remove</th>
                            </tr>
                        </thead>
                        <% wishListData.items.forEach(item => { %>
                        <tbody id="cart-tbody">
                            <tr class="cart__row border-bottom line1 cart-flex border-top">
                                <td class="cart__image-wrapper cart-flex-item">
                                    <a href="#">
                                        <img class="cart__image" src="/productImages/<%= item.product.productImage[0] %>" alt="<%= item.product.productName %>">
                                    </a>
                                </td>
                                <td class="cart__meta small--text-left cart-flex-item">
                                    <div class="list-view-item__title">
                                        <a href="#" class="text-dark"> <%= item.product.productName %></a>
                                    </div>
                                    <div class="cart__meta-text text-dark">
                                        Category: <%= item.product.category.name %> <br>
                                    </div>
                                </td>
                                <td class="cart__price-wrapper cart-flex-item text-dark">
                                    <span class="money">Rs<%= item.price %></span>
                                </td>
                                <td class="cart__update-wrapper cart-flex-item text-right">
                                    <a href="/productDetails?id=<%= item.product._id %>" class="btn btn-secondary btn--small cart-continue">Add to cart</a>
                                </td>
                                <td class="cart__update-wrapper cart-flex-item text-right">
                                    <a href="#" class="btn btn--secondary cart__remove" onclick="removeProduct('<%= item.product._id %>')" title="Remove item">
                                        <i class="icon anm anm-times-l"></i>
                                    </a>
                                </td>
                            </tr>
                        </tbody>
                        <% }) %>
                    
                        <tfoot>
                            <tr>
                                <td colspan="2" class="text-left">
                                    <a href="/" class="btn btn-secondary btn--small cart-continue">Home</a>
                                </td>
                                <td colspan="2" class="text-right">
                                    <button type="submit" name="clear" onclick="clearWishList()" class="btn btn-secondary btn--small small--hide">Clear Wishlist</button>
                                </td>
                            </tr>
                        </tfoot>
                    </table>
                    
                </form>
              <% } %>
                
            </div>
        </div>
    </div>
