    <script>
    
      // for form validation
      function validateForm() {
    

    let valid = true;

    

    // Clear previous error messages
    document.querySelectorAll(".error").forEach(function(error) {
        error.textContent = '';
    });

    const couponName = document.getElementById("name").value.trim();
    const couponDescription = document.getElementById("description").value.trim();
    

    const couponCode = document.getElementById('code').value.trim();
    const couponDiscount = document.getElementById('discount').value.trim();

    const maxAmount = document.getElementById('maxAmount').value.trim();
    const minAmount = document.getElementById('minAmount').value.trim();

    

    // Regex for price (accepts up to 4 decimals)
    const pricePattern = /^\d{1,8}(\.\d{1,4})?$/;

    // Regex for percentage
    const percentagePattern = /^(100|[1-9]?[0-9](\.\d+)?)%$/

    // Product Name Validation
    if (couponName === '') {
        document.getElementById('nameError').textContent = "Coupon name is Required";
        valid = false;
    }


    // Product Description Validation
    if (couponDescription.length < 25) {
        document.getElementById('descriptionError').textContent = "Description must contain at least 25 characters";
        valid = false;
    }

    // coupon code Validation
    if (couponCode.length<6) {
        document.getElementById('codeError').textContent = "Coupon code must contain at least 6 characters";
        valid = false;
    }


    // coupo discount Validation
    if (couponDiscount===''  ) {
        document.getElementById('discountError').textContent = "Coupon Discount is Required";
        valid = false;
    }


    // max dicount  Validation
    if (maxAmount===''  ) {
        document.getElementById('maxAmountError').textContent = "Maximum Discount is Required";
        valid = false;
    }else if(!pricePattern.test(maxAmount)){
        document.getElementById('maxAmountError').textContent = "Maximum Discount is not valid ";
        valid = false;
    }


     // min discount  Validation
     if (minAmount===''  ) {
        document.getElementById('minAmountError').textContent = "Minimum purchasing amount is Required";
        valid = false;
    }else if(!pricePattern.test(minAmount)){
        document.getElementById('minAmountError').textContent = "Minimum purchasing amount is not valid ";
        valid = false;
    }



    // Return the final validation status
    return valid;
}

// Event listener for form submission
document.getElementById("addCouponForm").addEventListener("submit", event => {
    if (!validateForm()) {
        event.preventDefault(); // Prevent form submission if validation fails
    }
});






   



