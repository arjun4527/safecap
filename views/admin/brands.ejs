    <script>

       



    //for list/unlist 
    document.addEventListener("DOMContentLoaded", function(){
        
        const statusBtns = document.querySelectorAll('[id^="statusButton"]');
    console.log("kaathzz",statusBtns)

// Loop through each button 
     statusBtns.forEach(statusBtn => {
     statusBtn.addEventListener("click", function() {
       const brandId = statusBtn.getAttribute('data-id');
    //    console.log("gomi",brandId)
       

       
       fetch('/admin/brandStatus', {
           method: "POST",
           headers: { "Content-Type": "application/json" }, 
           body: JSON.stringify({ brandId: brandId }) 
       })
       
       .then(response => response.json()) 
       .then(data => {
           if (data.success) { 
            
            statusBtn.classList.toggle("btn-success", data.brand.is_blocked);
               statusBtn.classList.toggle("btn-warning",!data.brand.is_blocked);
               statusBtn.textContent = data.brand.is_blocked ? "List" : "Unlist";

               // Update thetext and badge color
               const statusText = document.getElementById(`statusText${brandId}`);
               statusText.textContent = data.brand.is_blocked ? "Inactive " : "Active";
               statusText.classList.toggle("bg-success", !data.brand.is_blocked);
               statusText.classList.toggle("bg-danger", data.brand.is_blocked);
            
           } else {
               alert('Failed to update brand status');
               
           }
       })
       .catch(error => {
           console.log(error.message); // 
       });
   });
});
})
    

   // for validation
    function validateForm(){
    let valid=true

    document.querySelectorAll(".error").forEach(function(error){
        error.textContent=''
    })

    const name=document.getElementById('brandName').value.trim()
    const image=document.getElementById('brandImage').value.trim()


    if(name===''){
        document.getElementById('nameError').textContent="Name is Required" 
        valid=false
    }
    if(image===''){
        document.getElementById('descriptionError').textContent="Image is Required"
        valid=false
    }
    return valid
}
