<script>


function returnAccept(orderId,userId,productId,size){

  fetch("/admin/returnAccept", {
    method: "POST",
    headers: {
        "Content-Type": "application/json",
    },
    body: JSON.stringify({
        orderId: orderId,
        productId: productId,
        size: size,
        userId:userId
    })
})
.then(response => response.json())  
.then(data => {
    if(data.success){
      Swal.fire({
    title: 'Success!',
    text: data.message,
    icon: 'success',
    confirmButtonText: 'OK',
    toast: true,  
    position: 'top-end',
    timer: 3000,  
    timerProgressBar: true,
    background: '#f0f9ff',
  });
    }else{
      Swal.fire({
    title: 'Error!',
    text: "Something went Wrong",
    icon: 'error',
    confirmButtonText: 'OK',
    toast: true,  
    position: 'top-end',
    timer: 3000,  
    timerProgressBar: true,
    background: '#f0f9ff',
  });
    }

    setTimeout(function(){
      window.location.reload()
    },3000)
    
})
.catch(error => {
    // Handle any errors
    console.error("Error:", error);
});

}





function returnReject(orderId,productId,size){
  fetch("/admin/returnReject", {
    method: "POST",
    headers: {
        "Content-Type": "application/json",
    },
    body: JSON.stringify({
        orderId: orderId,
        productId: productId,
        size: size,
        
    })
})
.then(response => response.json())  // Parse the JSON response from the server
.then(data => {
    if(data.success){
      Swal.fire({
    title: 'Success!',
    text: data.message,
    icon: 'success',
    confirmButtonText: 'OK',
    toast: true,  
    position: 'top-end',
    timer: 3000,  
    timerProgressBar: true,
    background: '#f0f9ff',
  });
    }else{
      Swal.fire({
    title: 'Error!',
    text: "Something went Wrong",
    icon: 'error',
    confirmButtonText: 'OK',
    toast: true,  
    position: 'top-end',
    timer: 3000,  
    timerProgressBar: true,
    background: '#f0f9ff',
  });
    }

    setTimeout(function(){
      window.location.reload()
    },3000)
    
})
}





