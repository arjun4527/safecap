            </div>
        </header>
        <section class="content-main">
            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">Return Orders</h2>
                    
                </div>
                <!-- <div>
                  <a href="/admin/addCoupon">
                    <button type="button" class="btn btn-primary material-icons md-post_add">
                    Add New Coupon
                  </button>
                </a>
                  
                </div> -->
            </div>
            <div class="card mb-4">
                <header class="card-header">
                    <div class="row gx-3">
                        <div class="col-lg-4 col-md-6 me-auto">
                            <input type="text" placeholder="Search..." class="form-control">
                        </div>
                        <div class="col-lg-2 col-6 col-md-3">
                            <select class="form-select">
                                <option>Status</option>
                                <option>Active</option>
                                <option>Disabled</option>
                                <option>Show all</option>
                            </select>
                        </div>
                        <div class="col-lg-2 col-6 col-md-3">
                            <select class="form-select">
                                <option>Show 20</option>
                                <option>Show 30</option>
                                <option>Show 40</option>
                            </select>
                        </div>
                    </div>
                </header> <!-- card-header end// -->
                <div class="card-body">
                    <div class="table-responsive">
                      <table class="table table-hover" style="width: 100%; text-align: left;">
                        <thead>
                            <tr>
                                <th>Customer Name</th>
                                <th scope="col">Order ID</th>
                                <th scope="col">Product ID</th>
                                <th scope="col">Size</th>

                                <th scope="col">Refund Amount</th>
                                <th scope="col">Return Reason</th>
                                <th scope="col">Date</th>
                                <th scope="col">Status</th>
                                <th scope="col" class="text-end">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                          <% returnData.forEach(data => { %>
                            <tr>
                        
                                <td style="color: black;"><%= data.user.firstName %></td>
                                <td style="color: black;"><%= data?.orderId?._id%></td>
                                <td style="color: black;"><%= data.productId %></td>
                                <td style="color: black;"><%= data.size %></td>

                                <td style="color: black;"><%= data.returnProductAmount %></td>
                                <td style="color: black;"><%= data.returnReason %></td>
                                <td style="color: black;">
                                    <%= new Date(data.returnDate).toLocaleDateString('en-US', { month: 'long', day: 'numeric', year: 'numeric' }) %>
                                </td>
                                <td style="color: black;"><%= data.returnStatus %></td>
                                <td class="text-end">
                                    <div style="display: flex; gap: 10px; justify-content: flex-end;">
                                      <% if(data.returnStatus==="return requested") { %>
                        
                                          <button class="accept-btn" 
                                                  style="background-color: green; color: white; padding: 10px 20px; border: none; border-radius: 5px; cursor: pointer; font-size: 16px; transition: background-color 0.3s ease;" 
                                                  onmouseover="this.style.backgroundColor='darkgreen'" 
                                                  onmouseout="this.style.backgroundColor='green'"
                                                  onclick="returnAccept('<%= data?.orderId?._id%>','<%= data.user._id %>', '<%= data.productId %>', '<%= data.size %>')">
                                              Accept
                                          </button>
                            
                                    

                                      <button style="background-color: red; color: white; padding: 10px 20px; border: none; border-radius: 5px; cursor: pointer; font-size: 16px; transition: background-color 0.3s ease;" 
                                              onmouseover="this.style.backgroundColor='darkred'" 
                                              onmouseout="this.style.backgroundColor='red'"
                                              onclick="returnReject('<%= data?.orderId?._id%>', '<%= data.productId %>', '<%= data.size %>')">
                                          Reject
                                      </button>
                            
                                     <% } %>
                                        


                                       
                                    </div>
                                </td>
                            </tr>
                        <% }) %>
                        
                           
                        </tbody>
                    </table>
                    
                    
                    
                    </div> <!-- table-responsive //end -->
                </div> <!-- card-body end// -->
            </div>
             <!-- card end// -->


            
            

            
        </section> <!-- content-main end// -->
