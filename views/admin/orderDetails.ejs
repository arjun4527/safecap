<script>

   const pending=document.getElementById("pending")
   const shipping=document.getElementById("shipping")
   const delivered=document.getElementById("delivered")
   const canceled=document.getElementById("canceled")
   const updateStatusBtn = document.getElementById(`updateStatus`);
   

   
   


   updateStatusBtn.addEventListener("click",()=>{

    const orderStatus=selectedOrderStatus()

    console.log("orderstatus",orderStatus);
    
    const orderId = updateStatusBtn.getAttribute("data-order-id");
    console.log("asassa",orderStatus,orderId)

    fetch("/admin/updateOrderStatus", {
    method: "POST",
    headers: { "Content-Type": "application/json" },
    body: JSON.stringify({ orderStatus: orderStatus, orderId: orderId })
})

    .then(() => {
        window.location.reload();
    });
})













  function selectedOrderStatus() {
    if (pending && pending.checked) {
        return pending.value;
    } else if (shipping && shipping.checked) {
        return shipping.value;
    } else if (delivered && delivered.checked) {
        return delivered.value;
    } else if (canceled && canceled.checked) {
        return canceled.value;
    }
    return null; 
}






   
</script>

