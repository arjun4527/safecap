                                    <p class="mb-1">
                                      <%= orderData.shippingAddress.name %> <br> alex@example.com <br> <%= orderData.shippingAddress.phone %>
                                    </p>
                                    <a href="/profile">View profile</a>
                                </div>
                            </article>
                        </div> <!-- col// -->
                        <div class="col-md-4">
                            <article class="icontext align-items-start">
                                <span class="icon icon-sm rounded-circle bg-primary-light">
                                    <i class="text-primary material-icons md-local_shipping"></i>
                                </span>
                                <div class="text">
                                    <h6 class="mb-1">Order info</h6>
                                    <p class="mb-1">
                                        Shipping: Fargo express <br> Pay method: <%= orderData.paymentMethod %> <br> Status: <%= orderData.orderStatus %>
                                    </p>
                                    <a href="#">Download info</a>
                                </div>
                            </article>
                        </div> <!-- col// -->
                        <div class="col-md-4">
                            <article class="icontext align-items-start">
                                <span class="icon icon-sm rounded-circle bg-primary-light">
                                    <i class="text-primary material-icons md-place"></i>
                                </span>
                                <div class="text">
                                    <h6 class="mb-1">Deliver to</h6>
                                    <p class="mb-1">
                                        <br><%= orderData.shippingAddress.address %> <br> City: <%= orderData.shippingAddress.district %> <br> State: <%= orderData.shippingAddress.state %>,<br><%= orderData.shippingAddress.pincode %>
                                    </p>
                                    <a href="#">View profile</a>
                                </div>
                            </article>
                        </div> <!-- col// -->
                    </div> <!-- row // -->
                    <di<div class="row">
                        <div class="col-lg-7">
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th width="40%">Product</th>
                                            <th width="20%">Unit Price</th>
                                            <th width="20%">Quantity</th>
                                            <th width="20%" class="text-end">Total</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% orderData.items.forEach(item => { %>
                                            <tr>
                                                <td>
                                                    <a class="itemside" href="#">
                                                        <div class="left">
                                                            <img src="/productImages/<%= item.productImages[0] %>" width="40" height="40" class="img-xs" alt="Item">
                                                        </div>
                                                        <div class="info"> <%= item.productName %> </div>
                                                    </a>
                                                </td>
                                                <td> <%= item.price %> </td>
                                                <td> <%= item.quantity %> </td>
                                                <td class="text-end"><%= item.price * item.quantity %></td> <!-- Total for the item -->
                                            </tr>
                                        <% }) %>
                                        
                                        <tr>
                                            <td colspan="4">
                                                <article class="float-end">
                                                    <dl class="dlist">
                                                        <dt>Subtotal:</dt>
                                                        <dd><%= orderData.subTotal %></dd>
                                                    </dl>
                                                    <dl class="dlist">
                                                        <dt>Shipping cost:</dt>
                                                        <dd><%= orderData.shippingPrice %></dd>
                                                    </dl>
                                                    <dl class="dlist">
                                                        <dt>Tax cost:</dt>
                                                        <dd><%= orderData.taxPrice %></dd>
                                                    </dl>
                                                    <dl class="dlist">
                                                        <dt>Grand total:</dt>
                                                        <dd> <b class="h5"><%= orderData.grandTotal %>/-</b></dd>
                                                    </dl>
                                                    <dl class="dlist">
                                                        <dt class="text-muted">Status:</dt>
                                                        <dd>
                                                            <span class="badge rounded-pill alert-success text-success"><%= orderData.orderStatus %></span>
                                                            

                                                        </dd>
                                                    </dl>
                                                </article>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div> <!-- table-responsive// -->
                            <a class="btn btn-primary" href="page-orders-tracking.html">Cancel Order</a>
                        </div> <!-- col// -->
                    
                        <div class="col-lg-5" > <!-- New column for order status -->
                            <div class="orderStatus mr-5">
                                <h6 class="mb-3">Order Status</h6>
                                <% if(orderData.orderStatus==="pending"){ %>
                                    <label style="display: block; color:black; font-size: 17px;">
                                    <input type="radio" name="orderStatus" id="shipping" value="shipping" style="margin-right: 10px;"> Shipping
                                    </label>
                                    <label style="display: block; color:black; font-size: 17px;">
                                        <input type="radio" name="orderStatus" id="delivered" value="delivered" style="margin-right: 10px;"> Delivered
                                    </label>
                                    <label style="display: block; color:black; font-size: 17px;">
                                        <input type="radio" name="orderStatus" id="canceled" value="canceled" style="margin-right: 10px;"> Canceled
                                    </label>
                               <% } else if(orderData.orderStatus==="shipping"){ %>
                                    <label style="display: block; color:black; font-size: 17px;">
                                        <input type="radio" name="orderStatus" id="delivered" value="delivered" style="margin-right: 10px;"> Delivered
                                    </label>
                                    <label style="display: block; color:black; font-size: 17px;">
                                        <input type="radio" name="orderStatus" id="canceled" value="canceled" style="margin-right: 10px;"> Canceled
                                    </label>
                              <% } else if(orderData.orderStatus==="delivered"){ %>
                                   <label style="display: block; color:black; font-size: 17px;">
                                        <input type="radio" name="orderStatus" id="canceled" value="canceled" style="margin-right: 10px;"> Canceled
                                    </label>
                             <% } else if(orderData.orderStatus==="canceled"){ %>
                                <label style="display: block; color:black; font-size: 17px;">
                                    <input type="radio" name="orderStatus" id="pending" value="pending" style="margin-right: 10px;"> Pending
                                </label>
                              <% } %>

                               

                                
                                <button type="submit" id="updateStatus" data-order-id="<%= orderData._id %>"  class="btn btn-primary mt-3">Update Status</button>
                                
                            </div>
                        </div> <!-- col-lg-5 for order status -->
