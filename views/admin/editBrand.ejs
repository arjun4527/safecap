    <script>
      




// remove brand image

async function removeImage (imageName, brandId) {

  console.log(imageName, brandId);
  
  if (confirm('Are you sure you want to remove this image?')) {
    
    $.ajax({
      url: '/admin/removeBrandImage',
      type: 'POST',
      contentType: 'application/json',
      data: JSON.stringify({
        brandImage: imageName,
        id: brandId
      }),
       success: function(response) {
         
        if(response.success){
          showToast(response.message,"success")
          // window.location.reload()
          window.location.href='/admin/brands'
        }else{
          showToast(response.message,"error")
        }
       },
       error: function (xhr, status, error) {
                    
            showToast("Request failed: " + error, "error");
       }

    });
  }
}
function showToast(message, type) {
        let backgroundColor;

        if (type === 'success') {
            backgroundColor = "green";
        } else if (type === 'error') {
            backgroundColor = "red";
        } else {
            backgroundColor = "gray";
        }

        Toastify({
            text: message,
            duration: 2000,
            close: true,
            gravity: "top",
            position: "right",
            backgroundColor: backgroundColor,
        }).showToast();
      }



      //for validate form

function validateForm(){
    let valid=true

    document.querySelectorAll(".error").forEach(function(error){
        error.textContent=''
    })

    const name=document.getElementById('brandName').value.trim()
    const image=document.getElementById('brandImage').value.trim()


    if(name===''){
        document.getElementById('nameError').textContent="Name is Required" 
        valid=false
    }
    if(image===''){
        document.getElementById('descriptionError').textContent="Image is Required"
        valid=false
    }
    return valid
}
document.getElementById("editBrandForm").addEventListener("submit",event =>{
    if(!validateForm())(
        event.preventDefault()
    )
})
   </script>



