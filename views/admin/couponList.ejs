                                        <td style="color: black;"><%= coupon.maxAmount %></td>
                                        <td style="color: black;"><%= coupon.minAmount %></td>
                                        <td>
                                            <!-- Status badge -->
                                            <span id="statusText<%= coupon._id %>" class="<%= coupon.is_blocked ? 'badge bg-danger' : 'badge bg-success' %>">
                                                <%= coupon.is_blocked ? 'Inactive' : 'Active' %>
                                            </span>
                                        </td>
