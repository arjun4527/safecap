<script>


 // Select all buttons that start with id "statusButton"
 const statusBtns = document.querySelectorAll('[id^="statusButton"]');

// Loop through each button and add an event listener
statusBtns.forEach(statusBtn => {
    statusBtn.addEventListener("click", function() {
        const couponId = statusBtn.getAttribute('data-id'); // Get productId from data-id attribute
        

        // Fetch API to send request to the server for status change
        fetch('/admin/couponStatus', {
            method: "POST",
            headers: { "Content-Type": "application/json" }, 
            body: JSON.stringify({ couponId: couponId }) 
        })
        .then(response => response.json()) // Convert the response to JSON
        .then(data => {
            if (data.success) {    
               // Reverse the button text and class
               statusBtn.classList.toggle("btn-success", data.coupon.is_blocked);
                statusBtn.classList.toggle("btn-danger",!data.coupon.is_blocked);
                statusBtn.textContent = data.coupon.is_blocked ? "List" : "Unlist";

                // Update the status text and badge color
                const statusText = document.getElementById(`statusText${couponId}`);
                statusText.textContent = data.coupon.is_blocked ? "Inactive " : "Active";
                statusText.classList.toggle("bg-success", !data.coupon.is_blocked);
                statusText.classList.toggle("bg-danger", data.coupon.is_blocked);
            } else {
                alert('Failed to update coupon status');
                
            }
        })
        .catch(error => {
            console.error("Error:", error); // Log any error
        });
    });
});









 //for sweet alert

 let couponAddedMessage = "<%= typeof couponAddedMessage !== 'undefined' ? couponAddedMessage : '' %>";

if (couponAddedMessage) {
  Swal.fire({
    title: 'Success!',
    text: couponAddedMessage,
    icon: 'success',
    confirmButtonText: 'OK',
    toast: true,  
    position: 'top-end',
    timer: 3000,  
    timerProgressBar: true,
    background: '#f0f9ff',
  });
}
  

</script>

