<script>


// for delete offer
async function offerDelete(offerId) {
    try {
    

        const response = await fetch('/admin/deleteOffer', {
            method: 'DELETE',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ id: offerId })
        });

        if (!response.ok) {
            throw new Error('Failed to delete offer');
        }

        const data = await response.json();

        

        Swal.fire({
          title: 'Success!',
            icon: 'success',
            text: data.message,
            confirmButtonText: 'OK',
            confirmButtonColor: '#000000', 
        });

        

        setTimeout(() => {
            window.location.reload();
        }, 3000);    
      } catch (error) {
        console.error('Error:', error);
        Swal.fire({
          title: 'Failed!',
            icon: 'failed',
            text: "Failed to delete the offer. Please try again.",
            confirmButtonText: 'Try Again',
            confirmButtonColor: '#000000', 
        });
        
    }
}



 //for sweet alert

 let productOffer = "<%= typeof productOffer !== 'undefined' ? productOffer : '' %>";

if (productOffer) {
  Swal.fire({
    title: 'Success!',
    text: productOffer,
    icon: 'success',
    confirmButtonText: 'OK',
    toast: true,  
    position: 'top-end',
    timer: 3000,  
    timerProgressBar: true,
    background: '#f0f9ff',
  });
}




let updatedOffer = "<%= typeof updatedOffer !== 'undefined' ? updatedOffer : '' %>";

if (updatedOffer) {
  Swal.fire({
    title: 'Success!',
    text: updatedOffer,
    icon: 'success',
    confirmButtonText: 'OK',
    toast: true,  
    position: 'top-end',
    timer: 3000,  
    timerProgressBar: true,
    background: '#f0f9ff',
  });
}
  

</script>

