                                <th scope="col" class="text-end">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                         <%  productOfferData.forEach(productOffer => { %>
                          <tr>
                            <td style="color: black;"><%= productOffer._id %></td>
                            <td style="color: black;"><%= productOffer.offerName %></td>
                            <td style="color: black;"><%= productOffer.offerDiscount %></td>
                            
                            <td class="text-center">
                              <!-- Update Button -->
                              <a href="/admin/updateOffer?offerId=<%= productOffer._id %>">
                                  <button class="btn btn-success btn-action">Update</button>
                              </a>
                          </td>
                          

                            <td class="text-end">
                              <button class="btn btn-danger btn-action" onclick="offerDelete('<%= productOffer._id %>')"
                                >Delete</button>
                            </td>
                            
                        </tr>
                        <% }); %>
                            
                        </tbody>
